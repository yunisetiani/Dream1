<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uuuuu.dream1.MainActivity"
    android:background="#cdc4c4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Login !"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:gravity="center"
        android:textColor="#090808" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LOGIN SISWA SMK TELKOM"
        android:id="@+id/logintextView"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uname"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/logintextView"
        android:layout_alignStart="@+id/logintextView"
        android:layout_alignRight="@+id/logintextView"
        android:layout_alignEnd="@+id/logintextView"
        android:hint="Username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/uname"
        android:layout_alignEnd="@+id/uname"
        android:layout_marginBottom="76dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:layout_below="@+id/uname"
        android:layout_alignLeft="@+id/uname"
        android:layout_alignStart="@+id/uname"
        android:hint="Password" />
</RelativeLayout>
